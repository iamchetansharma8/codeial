<link rel="stylesheet" href="/css/home.css">
<section id="home-container">
<% if(locals.user){ %>
<section id="feed-posts">
    <h4>Posts</h4>
    <form action="/posts/create" method="POST" id="new-post-form">
        <textarea name="content" cols="35" rows="2" placeholder="What's in your mind...."></textarea>
        <input type="submit" value="Post">
    </form>
    <section id="posts-container">
        <ul>
            <% for(i of posts){ %>
                <%- include('_post') -%>
            <% } %>
        </ul>
    </section>
</section>
<% } %>
<section id="all-users">
    <h4>All Users</h4>
    <% for(u of all_users){ %>
        <p>
            <a href="/users/profile/<%=u.id%>"><%=u.name%></a>
        </p>
    <%}%>
    <section id="user-friends">
        <h4>Friends</h4>
       <% for(it of cur_user.friendslist){%>
            <p>
                <a href="/users/profile/<%=it.id%>"><%=it.name%></a>
            </p>
    <%}%>
    </section>
</section>
</section>
<script src="/js/home_comments.js"></script>
<script src="/js/home_posts.js"></script>
<script src="js/toggle_likes.js"></script>
<script>
    $('.toggle-like-button').each(function(){
        let self = this;
        let toggleLike = new ToggleLike(self);
    });
</script>